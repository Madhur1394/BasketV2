<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.andexert.library.RippleView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rv_color="@android:color/holo_blue_light"
        app:rv_zoom="true"
        app:rv_type="doubleRipple"
        app:rv_zoomDuration="250"
        rv_centered="true">

        <android.support.v7.widget.CardView
        android:id="@+id/cardViewBasket"
        style="@style/MyItemListStyle"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
            android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewBasketTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:paddingBottom="10dp"
            android:text="TextView"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/textViewBasketDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="TextView"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewBasketCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewItemTitle"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="bottom"
            android:text="TextView"
            android:textSize="15dp" />

    </android.support.v7.widget.CardView>
    </com.andexert.library.RippleView>

</LinearLayout>
